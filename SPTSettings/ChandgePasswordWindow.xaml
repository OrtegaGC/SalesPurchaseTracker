<Window x:Class="SPTSettings.ChandgePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chandge Password" Height="213" Width="407">
    <UniformGrid Rows="4">
        <Label>Current Password</Label>
        <PasswordBox Name="oldPasswordBox"></PasswordBox>
        <Label>Enter New Password</Label>
        <PasswordBox Name="newPasswordBox"></PasswordBox>
        <Label>Re-Enter New Password</Label>
        <PasswordBox Name="reNewPasswordBox"></PasswordBox>
        <Button Name="cancelBtn" Click="cancelBtn_Click">Cancel</Button>
        <Button Name="updateBtn" Click="updateBtn_Click">Update</Button>
    </UniformGrid>
</Window>
